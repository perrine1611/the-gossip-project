
<h1> Connexion </h1>

<body>

<% if flash[:danger] %>
      <div class="alert alert-danger" role="alert"><%= flash[:danger] %></div>
   <% end %>

    <%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= label_tag 'E-mail :' %>
    <%= text_field_tag 'email', @user.email %>
    <br /> <br />

    <%= label_tag 'Mot de passe:' %>
    <%= password_field_tag 'password', @user.password %>
    <br /> <br />
    
    <%= submit_tag "Valider" %>
      <br>
      <br>
    <p><a href="<%= new_user_path %>" >Inscription</a></p>
  
  <% end %>

</body>